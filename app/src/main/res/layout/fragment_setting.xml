<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="#FFFFFF">

    <!-- Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >
        <ImageView
        android:id="@+id/back_button"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/back_button"/>

    <!-- Settings Title -->
    <TextView
        android:id="@+id/settings_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Settings"
        android:paddingRight="25dp"
        android:layout_weight="1"
        android:textSize="24sp"
        android:textColor="@color/textcolor"
        android:textFontWeight="750"
        android:fontFamily="@font/rubik"
        android:textStyle="bold"/>
    </LinearLayout>

    <!-- Profile Image -->
    <ImageView
        android:id="@+id/profile_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:contentDescription="Profile Image"
        android:src="@drawable/coolkidsitting" />

    <!-- Notifications Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:background="@drawable/input_background"
    android:padding="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/settings_information_icons__3_"
    android:contentDescription="Notifications Icon"/>

    <TextView
        android:id="@+id/notifications_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:text="Notifications"
        android:textColor="@color/textcolor"
        android:textFontWeight="750"
        android:textSize="20sp"
        android:fontFamily="@font/rubik"/>

        <Switch
            android:id="@+id/notifications_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp" />
</LinearLayout>
<TextView
android:id="@+id/account_info_header"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_marginTop="12dp"
android:text="Account information"
android:textColor="#78746D"
    android:textFontWeight="650"
android:textSize="14sp"
android:fontFamily="@font/rubik"/>

    <!-- Account Information Items -->

    <!-- Name Item -->
<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:background="@drawable/input_background"
    android:padding="16dp"
    android:orientation="horizontal"
    android:gravity="center_vertical">

<ImageView
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:src="@drawable/settings_information_icons__4_"
    android:contentDescription="User Icon"/>

<LinearLayout
android:layout_width="0dp"
android:layout_height="wrap_content"
android:layout_weight="1"
android:orientation="vertical"
android:paddingStart="8dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Name"
    android:textColor="#3C3A36"
    android:textSize="20sp"
    android:textFontWeight="750"
    android:fontFamily="@font/rubik"/>

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text=""
     android:id="@+id/settingname"
    android:textColor="#78746D"
    android:textFontWeight="650"
    android:textSize="14sp"
    android:fontFamily="@font/rubik"/>
</LinearLayout>

<ImageView
android:layout_width="24dp"
android:layout_height="24dp"
android:src="@drawable/icon__1_"/>
    </LinearLayout>

    <!-- Email Item -->

    <!-- Password Item -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:background="@drawable/input_background"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:contentDescription="Email Icon"
            android:src="@drawable/settings_information_icons__1_" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:text="Email"
                android:textSize="20sp"
                android:textFontWeight="650"
                android:textColor="#3C3A36"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik"
                android:text=""
                android:id="@+id/emailuser"
                android:textColor="#78746D"
                android:textFontWeight="650"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="Arrow Icon"
            android:src="@drawable/icon__1_" />
    </LinearLayout>

    <LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_marginTop="8dp"
android:background="@drawable/input_background"
android:padding="16dp"
android:orientation="horizontal"
android:gravity="center_vertical">

<ImageView
    android:layout_width="32dp"
    android:layout_height="32dp"
    android:src="@drawable/settings_information_icons__2_"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:orientation="vertical"
    android:paddingStart="8dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="#3C3A36"
        android:textSize="20sp"
        android:textFontWeight="650"
        android:fontFamily="@font/rubik"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="changed 2 weeks ago"
        android:textColor="#78746D"
        android:textFontWeight="650"
        android:textSize="14sp"
        android:fontFamily="@font/rubik"/>
</LinearLayout>

<ImageView
    android:layout_width="24dp"
    android:layout_height="24dp"
    android:src="@drawable/icon__1_"
    android:contentDescription="Arrow Icon"/>
</LinearLayout>

    </LinearLayout>
